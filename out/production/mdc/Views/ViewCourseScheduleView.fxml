                  <TableColumn fx:id="Capacity" prefWidth="75.0" text="Capacity" />
                  <TableColumn fx:id="CreditHours" prefWidth="75.0" text="Credit Hours" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </center>
   <top>
      <VBox alignment="CENTER" prefHeight="25.0" prefWidth="600.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER">
